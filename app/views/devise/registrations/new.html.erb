
<%= devise_error_messages! %>
<div class="top-content">
    <div class="inner-bg" align="center">
      <div class="container">
      <div class="col-md-4">
        <div class="side-content">
  <h3>
  One account is all you need
</h3>
<p>
  To apply for internship at "Joadah Consults ltd".
</p>
<div class="logo-strip"></div>
<h3>
  Take it all with you
</h3>
<p>
  Get an opportunity to train with Joadah</p>
<div class="devices-icon"></div>
  </div>
      </div>
       <div class="col-md-8">
        <div class="panel panel-default">
        
          <div class="panel-body">
            <div class="form-box">
              <div class="form-top">
                 <div class="form-top-left">
                    <h3 style="font-size:30px;">Sign up now</h3>
                       <p style="font-size:16px;">Fill in the form below to get instant access:</p>
                  </div>
                  <div class="form-top-right">
                    <i class="fa fa-pencil"></i>
                  </div>
                </div>
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                      <%= devise_error_messages! %>
                      <div class="form-bottom">
                      <div class="field">
                        <%= f.text_field :email, autofocus: true, class:"form-control ", placeholder:"Email Address" %>
                      </div>

                      <div class="field">
                        <% if @minimum_password_length %>
                        
                        <% end %>
                        <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Password (6 Characters minimum)" %>
                      </div>

                      <div class="field">
                        <%= f.password_field :password_confirmation, autocomplete: "off",  class:"form-control", placeholder:"Re-type password (password_confirmation)" %>
                      </div>
                      <div class="actions">
                        <%= f.submit "Sign up", class:"btn btn-info btn-lg btn-block", width: "100%" %>
                      </div>
                    <% end %>

                    <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
 </div>
    </div>
  </div>
</div>

